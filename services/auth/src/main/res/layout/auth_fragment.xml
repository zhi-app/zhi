<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AuthActivity">

    <data>

        <variable
            name="viewModel"
            type="com.zhi.service.auth.AuthViewModel" />

        <variable
            name="host"
            type="com.zhi.common.app.BaseFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <include
            layout="@layout/auth_anonymous_button"
            android:id="@+id/anonymous"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:authProvider="@{viewModel.authProviders[com.zhi.service.auth.AnonymousAuthProvider.providerId]}"
            bind:host="@{host}" />

        <include
            layout="@layout/auth_phone_button"
            android:id="@+id/phone"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/facebook"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/anonymous"
            bind:authProvider="@{viewModel.authProviders[com.zhi.service.auth.PhoneAuthProvider.providerId]}"
            bind:host="@{host}" />

        <include
            layout="@layout/auth_facebook_button"
            android:id="@+id/facebook"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/google"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone"
            bind:authProvider="@{viewModel.authProviders[com.zhi.service.auth.FacebookAuthProvider.providerId]}"
            bind:host="@{host}" />

        <include
            layout="@layout/auth_google_button"
            android:id="@+id/google"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/twitter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/facebook"
            bind:authProvider="@{viewModel.authProviders[com.zhi.service.auth.GoogleAuthProvider.providerId]}"
            bind:host="@{host}" />

        <include
            layout="@layout/auth_twitter_button"
            android:id="@+id/twitter"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/google"
            bind:authProvider="@{viewModel.authProviders[com.zhi.service.auth.TwitterAuthProvider.providerId]}"
            bind:host="@{host}" />


        <include
            layout="@layout/auth_email_button"
            android:id="@+id/email"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/github"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/twitter"
            bind:authProvider="@{viewModel.authProviders[com.zhi.service.auth.EmailAuthProvider.providerId]}"
            bind:host="@{host}" />

        <include
            layout="@layout/auth_github_button"
            android:id="@+id/github"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email"
            bind:authProvider="@{viewModel.authProviders[com.zhi.service.auth.GitHubAuthProvider.providerId]}"
            bind:host="@{host}" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>