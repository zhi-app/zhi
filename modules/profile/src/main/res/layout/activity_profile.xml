<layout>


    <data>

        <variable
            name="viewModel"
            type="com.zhi.module.profile.ProfileViewModel" />
    </data>


    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_height="260.0dip"
            android:layout_width="fill_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                app:contentScrim="?colorPrimary"
                app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_scrollFlags="exitUntilCollapsed|scroll"
                app:titleEnabled="false">

                <ImageView
                    android:id="@id/image"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/photo_female_8"
                    app:layout_collapseMode="parallax" />

                <View
                    android:background="@color/overlay_dark_10"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_height="?actionBarSize"
                    android:layout_width="fill_parent"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:background="@android:color/white"
            android:clipToPadding="false"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <TextView
                android:layout_height="2000dp"
                android:layout_width="match_parent"
                android:text="@string/ph_lorem_ipsum_large" />
            <!--<fragment-->
            <!--android:id="@+id/fragment"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_width="match_parent"-->
            <!--android:name="com.zhi.module.profile.ProfileFragment"-->
            <!--tools:layout="@layout/fragment_profile" />-->
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tint="@android:color/white"
            app:backgroundTint="@color/deep_orange_500"
            app:fabSize="normal"
            app:layout_anchor="@id/app_bar_layout"
            app:layout_anchorGravity="end|bottom|center"
            app:srcCompat="@drawable/ic_create"
            tools:ignore="VectorDrawableCompat" />

    </android.support.design.widget.CoordinatorLayout>
</layout>


